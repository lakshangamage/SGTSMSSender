<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootview"
    tools:context=".view.MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="301dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text='Fill all the fields and click "Start Sending" to vote for your favorite contestant '
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_destination"
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:ems="10"
                android:hint="SMS Destination. (Eg. 77200)"
                android:inputType="phone"
                android:textColorHint="@android:color/primary_text_light" />

            <EditText
                android:id="@+id/txt_keyword"
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_destination"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:hint="Keyword (SMS Prefix)"
                android:inputType="text"
                android:textColorHint="@android:color/primary_text_light" />

            <EditText
                android:id="@+id/txt_vot"
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_keyword"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:hint="Votting No. (Eg. 20)"
                android:inputType="number"
                android:textColorHint="@android:color/primary_text_light" />

            <EditText
                android:id="@+id/txt_no"
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_vot"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:hint="No. of SMSs"
                android:inputType="number"
                android:textColorHint="@android:color/primary_text_light" />


            <Button
                android:id="@+id/btn_send"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_no"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:background="@drawable/curved_button_background"
                android:text="Start Sending"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="301dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_send"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="*Click on 'Remember Choice' if prompted to avoid inconveniences. "
                android:textColor="@android:color/holo_red_dark"
                android:textSize="11sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ceyentalogo" />

        </RelativeLayout>
</RelativeLayout>
